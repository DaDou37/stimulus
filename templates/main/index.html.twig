{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

<div data-controller="postal-code">
    {{ form_start(form) }}

        {{ form_row(form.postalCode, {
            attr: {
                'data-postal-code-target': 'postalCode',
                'data-action': 'change->postal-code#updateCityList'
            }
        }) }}


        {{ form_row(form.city, {
            attr: {
                'data-postal-code-target': 'city'
            }
        }) }}

        <button type="submit">Envoyer</button>

    {{ form_end(form) }}
</div>



{% endblock %}
